use strict;
use Cwd;
use IO::File;
use IO::Dir;
use File::Glob;
use File::Find;


my $pwd = ".";
my $g_found_unit_test = 0;
my $FILELIST;
my $VERSION;
my $version;


##########################################################################
# PrintHelp(): Prints the script usage.
##########################################################################
sub PrintHelp() {
  print "\n";
  print "Usage:  create_svunit.pl [ -help ]\n\n";
  print "Where -help               : prints this help screen\n";
  print "\n";
  die;
}


sub CheckArgs() {
  my $numargs = @ARGV;

  for my $i (0..$numargs-1) {
    if ( my $skip == 1 ) {
      $skip = 0;
    }
    else {
      if ( $ARGV[$i] =~ /(-help)|(-h)/ ) {
        PrintHelp();
      }
    }
  }
}

#############################################
# sub buildTestrunner(@)
#
# build/run the testrunner commandline with
# all the testsuites
#############################################
sub buildTestrunner
{
  my $cmd = "create_testrunner.pl -overwrite -out testrunner.sv";
  my $testsuites;

  find({
      wanted => sub {
                      if (/\..*_testsuite.sv/) {
                        $FILELIST->print("$_\n");
                        $testsuites .= " -add $_" if /\..*_testsuite.sv/;
                      }
                    },
      no_chdir => 1
    }, qw( . ));

  if (!defined $testsuites) {
    unlink ".svunit.f";
    return 1;
  }

  else {
    system("$cmd$testsuites");
    system("mv testrunner.sv .testrunner.sv");
    $FILELIST->print(".testrunner.sv\n");
    return 0;
  }
}


#############################################
# sub buildTestsuite($)
#
# recursively go through the directory tree,
# collect all the unit tests and write the
# Makefiles
#############################################

sub buildTestsuite
{
  my $dir = shift;
  my @unittest;
  my $parentDir;

  my $dirID = $dir;
  $dirID =~ s/[\/\.-]/_/g;
  $dirID = "." . $dirID;

  @unittest = <$dir/*_unit_test.sv>;

  # create the testsuite for this directory
  if (@unittest > 0) {
    my $cmd = "create_testsuite.pl -overwrite -out $dir/$dirID\_testsuite.sv";
    foreach (@unittest) {
      $FILELIST->print("$_\n");
      $cmd .= " -add $_";
    }
    system($cmd);
  }

  # recursively do the same through sub-directories
  foreach (@_ = <$dir/*>) {
    if (-d "$_" && !m/\.$/) {
      buildTestsuite("$_");
    }
  }
}

$VERSION = IO::File->new();
$VERSION->open("$ENV{SVUNIT_INSTALL}/VERSION.txt") || die;
$version = $VERSION->getline;
chomp $version;


$FILELIST = IO::File->new();
$FILELIST->open(">.svunit.f");
$FILELIST->print(qq!+define+SVUNIT_VERSION='"$version"'\n!);
$FILELIST->print("+incdir+.\n");
$FILELIST->print("+incdir+$ENV{SVUNIT_INSTALL}/svunit_base\n");
$FILELIST->print("$ENV{SVUNIT_INSTALL}/svunit_base/svunit_pkg.sv\n");

CheckArgs();
buildTestsuite($pwd);
exit buildTestrunner;
#print "Info: Found no unit tests. No SVUnit framework created.\n";
