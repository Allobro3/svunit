use strict;
use File::Glob;
use File::Find;
use File::Path qw(remove_tree);


find({
    wanted => sub {
                    if (/.*testsuite\.sv$/   or
                        /.*testrunner\.sv$/
                    ) {
                      unlink;
                    }
                  }
  }, qw( . ));

unlink "run.log";
unlink ".svunit.f";
remove_tree "work";
unlink "vsim.wlf";
unlink "ncsc.log";
remove_tree "INCA_libs";
unlink "irun.key";
remove_tree "csrc";
unlink "simv";
remove_tree "simv.daidir";
