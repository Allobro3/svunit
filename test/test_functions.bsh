create_unit_test() {
  create_unit_test.pl $1
}

setup() {
  ./clean
}

verify_file() {
  if [ "`diff -bB $1 $2`" != "" ]; then
    echo $1 failed;
    exit 1;
  fi
}

verify_testsuite() {
  PWD=`pwd | sed -e "s/[\/-]/_/g"`
  sed -e "s/PWD/$PWD/g" $1 > .$1
  verify_file .$1 .${PWD}_testsuite.sv
}

verify_testrunner() {
  PWD=`pwd | sed -e "s/[\/-]/_/g"`
  sed -e "s/PWD/$PWD/g" $1 > .$1
  verify_file .testrunner.gold .testrunner.sv
}
