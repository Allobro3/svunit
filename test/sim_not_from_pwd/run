rm -rf not_pwd >/dev/null

# create the Makefile
create_svunit.pl

which vcsi >/dev/null
if [ "$?" != "0" ]; then
  exit 1;
fi

# build and run svunit with vcsi
mkdir not_pwd
make


# check the log output for a PASS from the testrunner
if [ ! -e not_pwd/run.log ]; then
  echo not_pwd/run.log does not exist
  exit 1;
fi

grep "INFO:  \[0ns\]\[testrunner\]: Testrunner Results: PASS" not_pwd/run.log >/dev/null
if [ "$?" != "0" ]; then
  echo PASS not detected from Testrunner in not_pwd/run.log
  exit 1;
fi

exit 0
