source ../test_functions.bsh

setup

# remove and create the unit_test
create_unit_test test.sv

# build the framework
buildSVUnit

# verify the contents of the .svunit.f
expect_file .svunit.f
expect_file_does_contain "+incdir+$SVUNIT_INSTALL/svunit_base" .svunit.f
expect_file_does_contain "$SVUNIT_INSTALL/svunit_base/svunit_pkg.sv" .svunit.f
expect_file_does_contain .testrunner.sv .svunit.f
expect_file_does_contain .__testsuite.sv .svunit.f
expect_file_does_contain +incdir+. .svunit.f
expect_file_does_contain test_unit_test.sv .svunit.f
