source ../test_functions.bsh

pushd .

cd $SVUNIT_INSTALL/examples/uvm/simple_model
create_svunit.pl


################
# RUN WITH VCS #
################

make SIMULATOR=VCS

expect_file $SVUNIT_INSTALL/examples/uvm/simple_model/run.log
expect_testrunner_pass $SVUNIT_INSTALL/examples/uvm/simple_model/run.log

make SIMULATOR=VCS clean

###################
# RUN WITH QUESTA #
###################

make SIMULATOR=QUESTA

expect_file $SVUNIT_INSTALL/examples/uvm/simple_model/run.log
expect_testrunner_pass $SVUNIT_INSTALL/examples/uvm/simple_model/run.log

make SIMULATOR=QUESTA clean

###################
# RUN WITH IUS #
###################

make SIMULATOR=IUS

expect_file $SVUNIT_INSTALL/examples/uvm/simple_model/run.log
expect_testrunner_pass $SVUNIT_INSTALL/examples/uvm/simple_model/run.log

make SIMULATOR=IUS clean

popd

exit 0
