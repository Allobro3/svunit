pushd .

cd $SVUNIT_INSTALL/examples/modules/apb_slave
create_svunit.pl


###################
# RUN WITH QUESTA #
###################
which qverilog >/dev/null
if [ "$?" != "0" ]; then
  popd
  exit 1;
fi

# build and run svunit with qverilog
make

# check the log output for a PASS from the testrunner
if [ ! -e run.log ]; then
  echo run.log does not exist
  popd
  exit 1;
fi

grep "# INFO:  \[.*\]\[testrunner\]: Testrunner::PASSED" run.log >/dev/null
if [ "$?" != "0" ]; then
  echo PASS not detected from Testrunner in run.log
  popd
  exit 1;
fi


################
# RUN WITH VCS #
################
which vcsi >/dev/null
if [ "$?" != "0" ]; then
  popd
  exit 1;
fi

# build and run svunit with qverilog
make SIMULATOR=VCS

# check the log output for a PASS from the testrunner
if [ ! -e run.log ]; then
  echo run.log does not exist
  popd
  exit 1;
fi

grep "INFO:  \[.*\]\[testrunner\]: Testrunner::PASSED" run.log >/dev/null
if [ "$?" != "0" ]; then
  echo PASS not detected from Testrunner in run.log
  popd
  exit 1;
fi

popd

exit 0
