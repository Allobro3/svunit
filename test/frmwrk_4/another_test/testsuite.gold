import svunit_pkg::*;

module PWD_testsuite;
  string name = "PWD_ts";
  svunit_testsuite svunit_ts;


  //===================================
  // These are the unit tests that we
  // want included in this testsuite
  //===================================
  test0_unit_test test0_ut();


  //===================================
  // Build
  //===================================
  function void build();
    test0_ut.build();
    svunit_ts = new(name);
    svunit_ts.add_testcase(test0_ut.svunit_ut);
  endfunction


  //===================================
  // Run
  //===================================
  task run();
    svunit_ts.run();
    test0_ut.run();
    svunit_ts.report();
  endtask

endmodule


