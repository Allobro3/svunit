import svunit_pkg::*;

module testrunner();
  string name = "testrunner";
  svunit_testrunner svunit_tr;

  //===================================
  // These are the tests suites that we
  // want included in this testrunner
  //===================================
  PWD_testsuite PWD_ts();
  PWD_another_test_testsuite PWD_another_test_ts();


  //===================================
  // Setup
  //===================================
  function void setup();
    svunit_tr = new(name);
    PWD_ts.setup();
    svunit_tr.add_testsuite(PWD_ts.svunit_ts);
    PWD_another_test_ts.setup();
    svunit_tr.add_testsuite(PWD_another_test_ts.svunit_ts);
  endfunction

  task run();
    svunit_tr.run();
  endtask
endmodule
